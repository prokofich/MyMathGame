<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    tools:context=".controllers.Game3Fragment">

    <TextView
        android:layout_width="372dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="3 игра"
        android:textColor="#00ff6a"
        android:textSize="70dp">
    </TextView>

    <TextView
        android:layout_width="372dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="3"
        android:id="@+id/id_start_timer3"
        android:textColor="#00ff6a"
        android:textSize="80dp"
        android:layout_marginTop="10dp"
        android:layout_height="100dp"/>

    <TextView
        android:id="@+id/id_game3_tv_level"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="уровень"
        android:textColor="#00ff6a"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/id_game3_tv_timer"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="4 сек"
        android:textColor="#00ff6a"
        android:textSize="40dp">
    </TextView>

    <TextView
        android:id="@+id/id_game3_tv_primer"
        android:layout_width="372dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="2*5 = ?"
        android:textColor="#00ff6a"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/id_game3_et_result"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:backgroundTint="#00ff6a"
        android:textColor="#00ff6a" />

    <Button
        android:layout_width="225dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="#00ff6a"
        android:id="@+id/id_game3_button_go"
        android:text="ответить"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/id_game3_again"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="#00ff6a"
        android:text="начать заново"
        android:visibility="gone"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/id_game3_back"
        android:layout_marginTop="110dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:backgroundTint="#00ff6a"
        android:text="вернуться в меню 3 игры"
        android:layout_width="200dp"
        android:layout_height="50dp"/>



</LinearLayout>